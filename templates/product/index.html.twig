{% extends 'base.html.twig' %}

{% block title %}Nos produit| Mon site E-commerce{% endblock %}

{% block content %}
    <h1>Nos produits</h1>

    <div class="row">
        <div class="col-md-3">
            <h3>Filtres</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3>Nos Produits</h3>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <h5>{{ product.name }}</h5>
                            <a href="{{ path('product', {'slug':product.slug}) }}">
                                <img src="/uploads/" alt="{{ product.name}}">
                            </a>
                            <span class="product-subtitle row"> {{ product.subtitle }}</span>
                            <span class="product-price"> {{ product.price/100|number_format(2, '.', '.')}} â‚¬</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
